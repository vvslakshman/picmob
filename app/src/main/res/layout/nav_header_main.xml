<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <!--<ImageView-->
    <!--android:id="@+id/btnClose"-->
    <!--android:tint="@color/white"-->
    <!--android:paddingTop="30dp"-->
    <!--android:paddingRight="20dp"-->
    <!--android:paddingBottom="10dp"-->
    <!--android:layout_gravity="right"-->
    <!--android:src="@drawable/picmob"-->
    <!--android:layout_width="70dp"-->
    <!--android:layout_height="70dp" />-->


    <RelativeLayout
        android:id="@+id/lytHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:padding="10dp">


        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sidemenup" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_profile"
            android:orientation="vertical">

            <com.picmob.AppCustomView.CustomTextViewBold
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:maxLines="1"
                android:padding="2.5dp"
                android:text="@string/hello"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.picmob.AppCustomView.CustomTextViewNormal
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:text="@string/nice_to_see_you"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#484848"
        android:visibility="gone" />

</LinearLayout>
