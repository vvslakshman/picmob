<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true"
    android:layout_marginBottom="1dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:paddingTop="25dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:paddingBottom="25dp"
        >


        <LinearLayout
            android:id="@+id/linlayout"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:elevation="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/white"
                android:src="@drawable/selected_photo"
                android:layout_centerVertical="true"
                 />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >


                <com.picmob.AppCustomView.CustomTextViewBold
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prints"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/gray_text"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">


                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_prints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/gray_text"
                        android:layout_weight="1"
                        android:textSize="12sp"/>

                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/gray_text"
                        android:layout_weight="0.8"
                        android:textSize="12sp"/>

                    <com.picmob.AppCustomView.CustomTextViewBold
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="right"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_papertypeheading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/paper_colon"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"/>

                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_papertype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="0.8"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"/>

                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:visibility="invisible"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/red"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_frametype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/framing"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"/>


                    <ImageView
                        android:id="@+id/color_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"/>

                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_papercropping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text=""
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"/>

                    <com.picmob.AppCustomView.CustomTextViewNormal
                        android:id="@+id/txt_discountprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text=""
                        android:visibility="invisible"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/red"
                        android:textSize="12sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/custom_border_curverd_pink"
                        android:text="@string/edit"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:drawableLeft="@drawable/edit_drawable"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"/>


                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/custom_border_curverd_pink"
                        android:layout_marginLeft="8dp"
                        android:text="@string/delete"
                        android:fontFamily="@font/montserrat_regular"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/delete_drawable"
                        android:textColor="@color/colorAccent"/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>