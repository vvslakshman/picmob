<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
   >


    <LinearLayout
        android:id="@+id/linlayout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <com.picmob.AppCustomView.CustomTextViewNormal
            android:id="@+id/txt_prints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 prints"
            android:singleLine="true"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/gray_text"
            android:layout_weight="0.46"
            android:textSize="14sp"/>

        <com.picmob.AppCustomView.CustomTextViewNormal
            android:id="@+id/txt_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10x15 cm"
            android:singleLine="true"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/gray_text"
            android:layout_weight="0.35"
            android:textSize="14sp"/>

        <com.picmob.AppCustomView.CustomTextViewBold
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:gravity="right"
            android:layout_weight="0.5"
            android:singleLine="true"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/gray_text"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <com.picmob.AppCustomView.CustomTextViewNormal
            android:id="@+id/txt_papertypeheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_colon"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/gray_text"
            android:textSize="14sp"/>

        <com.picmob.AppCustomView.CustomTextViewNormal
            android:id="@+id/txt_papertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Matte"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/gray_text"
            android:textSize="14sp"/>



        <com.picmob.AppCustomView.RoundRectCornerImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@drawable/dummy"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_margin="1dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <com.picmob.AppCustomView.CustomTextViewNormal
            android:id="@+id/txt_frametype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/framing"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/gray_text"
            android:textSize="14sp"/>

        <com.picmob.AppCustomView.CustomTextViewNormal
            android:id="@+id/txt_papercropping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White Frame"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/gray_text"
            android:textSize="14sp"/>

    </LinearLayout>

        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"/>

    </LinearLayout>

    </LinearLayout>


</RelativeLayout>