<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/btn_next">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llt"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.picmob.AppCustomView.CustomTextViewNormal
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darker_gray"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/save_card_information_once_and_payment_details_fill_automatically_on_end_of_order"/>


        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/my_card"/>


    </LinearLayout>


    <LinearLayout
        android:layout_margin="12dp"
        android:layout_below="@+id/llt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editCardno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@color/gray_text"
                    android:textColorHint="@color/darker_gray"
                    android:drawableRight="@drawable/cardno_drawable"
                    android:backgroundTint="@color/gray_text"
                    android:hint="@string/card_number"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editCardname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"
                    android:drawablePadding="15dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@color/gray_text"
                    android:textColorHint="@color/darker_gray"
                    android:drawableRight="@drawable/cardname_drawable"
                    android:backgroundTint="@color/gray_text"
                    android:hint="@string/name"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editCarddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"
                    android:drawablePadding="15dp"
                    android:inputType="date"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:editable="true"
                    android:focusable="false"
                    android:textColor="@color/gray_text"
                    android:textColorHint="@color/darker_gray"
                    android:drawableRight="@drawable/carddate_drawable"
                    android:backgroundTint="@color/gray_text"
                    android:hint="@string/mm_yy"/>

                <EditText
                    android:id="@+id/editCardcvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"
                    android:drawablePadding="15dp"
                    android:inputType="numberPassword"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/gray_text"
                    android:layout_weight="1"
                    android:textColorHint="@color/darker_gray"
                    android:drawableRight="@drawable/cardcvv_drawable"
                    android:backgroundTint="@color/gray_text"
                    android:hint="@string/cvv"/>

            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_visa"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_border_curverd_pink">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/visa"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_master"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/master"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_maestro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maestro"/>

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>
    </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_ripple_pink"
        android:text="@string/save"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>



</RelativeLayout>